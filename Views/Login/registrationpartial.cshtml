<style>
    .box{
        display: flex;
        flex-direction: column;
        width: 150px;
    }
    span{
        color: orangered;
    }
</style>
@using SpotifyPlus.Models
@model User
<form asp-action="Register" asp-controller="Login" method="POST" class="box">
        <span asp-validation-for="Username"></span>
    <label asp-for="Username"></label>
    <input asp-for="Username">
    
    <span asp-validation-for="Email"></span>
    <label asp-for="Email"></label>
    <input asp-for="Email">

    <span asp-validation-for="Password"></span>
    <label asp-for="Password"></label>
    <input asp-for="Password">
    <span asp-validation-for="Confirm"></span>
    <label asp-for="Confirm">Confirm Password</label>
    <input asp-for="Confirm">
    <input value="Add User" type="submit">    
</form>
